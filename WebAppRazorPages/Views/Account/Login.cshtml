@model WebAppRazorPages.Model.AuthApp.LoginModel

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Вход на сайт</h2>

            <form method="post" asp-action="Login" asp-controller="Account">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Введите Name</label>
                        <input type="text" asp-for="Name" id="Name" name="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Введите пароль</label>
                        <input asp-for="Password" type="password" id="Password" name="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn-success" />
                        <a href="/Account/Register" class="btn btn-primary btn-create ml-2">Регистрация</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

